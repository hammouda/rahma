<p id="notice"><%= notice %></p>

<h1>Services</h1>
<div >
<%=form_tag(services_path, method: :get) do %>
<%= text_field_tag :term, params[:term] %>
<%=submit_tag :Search  %>
<% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.nom %></td>
        <td><%= service.description %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn btn-default">
<%= link_to 'Nouveau Service', new_service_path %>
</div>
